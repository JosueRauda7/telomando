@model Telomando.Models.ViewModels.SubCategoriasVM
@{
    ViewData["Title"] = "Sub Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oSubCategoria.Idsubcategoria == 0)
{
    <h1>Crear Sub Categoria</h1>
}
else
{
    <h1>Editar Sub Categoria</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="SubCategoria_Detalle" asp-controller="SubCategorias" method="post">
            <input type="hidden" asp-for="oSubCategoria.Idsubcategoria" />

            <div class="mb-3">
                <label class="form-label" asp-for="oSubCategoria.Idcategoria">Categoria</label>
                <select class="form-select form-select-sm" asp-for="oSubCategoria.Idcategoria" asp-items="@Model.oListaCategoria">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oSubCategoria.Nombre">Sub Categoria</label>
                <input class="form-control form-control-sm" asp-for="oSubCategoria.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oSubCategoria.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oSubCategoria.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oSubCategoria.Activo">Activo</label>
                <input class="form-check-input" asp-for="oSubCategoria.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oSubCategoria.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oSubCategoria.Eliminado" type="checkbox" />
            </div>





            <div class="mb-2">

                @if (Model.oSubCategoria.Idsubcategoria == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaSubCategorias" asp-controller="SubCategorias">Volver</a>

            </div>

        </form>
    </div>
</div>

