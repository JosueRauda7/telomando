@model IEnumerable<Telomando.Models.ModeloTransporte>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Modelos de Marca</h1>
</div>

<div class="card">
    <div class="card-header">
        <button onclick="generateExcel()" class="btn btn-success btn-sm">
            Reporte Excel
            <i class="fas fa-file-excel"></i>
        </button>
    </div>
    <div class="card-body">
        <a class="btn-success btn-sm" asp-action="Create" asp-controller="ModeloTransportes">Crear Nuevo</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Anio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Eliminado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Eliminado)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Idmodelotransporte">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Idmodelotransporte">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Idmodelotransporte">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
