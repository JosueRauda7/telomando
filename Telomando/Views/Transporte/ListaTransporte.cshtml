@model List<Telomando.Models.Transporte>
@{
    ViewData["Title"] = "Transporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<<div class="text-center">
    <h1 class="display-4">Transporte</h1>

</div>

<div class="card">
    <div class="card-header">
        <button onclick="generateExcel()" class="btn btn-success btn-sm">
            Reporte Excel
            <i class="fas fa-file-excel"></i>
        </button>
    </div>
    <div class="card-body">
        <a class="btn-success btn-sm" asp-action="Transporte_Detalle" asp-controller="Transporte" asp-route-idTransporte="0">Crear Nuevo</a>
        <hr />

        <table class="table table-striped" id="reportTable">
            <thead>
                <tr>
                    <th>Marca</th>
                    <th>Tipo</th>
                    <th>Placa</th>
                    <th>Fecha de Creacion</th>
                    <th>Activo</th>
                    <th>Eliminado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MarcaTransporte.Nombre</td>
                        <td>@item.TipoTransporte.Nombre</td>
                        <td>@item.Placa</td>
                        <td>@item.FechaRegistro</td>
                        <td>@item.Activo</td>
                        <td>@item.Eliminado</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Transporte_Detalle" asp-controller="Transporte" asp-route-idTransporte="@item.Idtransporte">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Transporte" asp-route-idTransporte="@item.Idtransporte">Eliminar</a>

                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>

<script>
    function generateExcel() {
        var table = document.getElementById('reportTable');
        var workbook = XLSX.utils.book_new();
        var worksheet = XLSX.utils.table_to_sheet(table);
        XLSX.utils.book_append_sheet(workbook, worksheet, "Reporte");

        XLSX.writeFile(workbook, 'Reporte.xlsx');
    }
</script>
