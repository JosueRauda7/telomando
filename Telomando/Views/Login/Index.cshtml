
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <h4>Ingresar</h4>
        <form asp-action="Validate">
            <div class="form-group">
                <input class="form-control" type="email" name="correo" placeholder="Email" style="margin: 20px 0" required/>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Contraseña" style="margin: 20px 0" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" style="margin: 20px 0" />
            </div>
        </form>
    </div>
    <div class="col-md-5">
        <h4>¿No tienes cuenta? ¡Regístrate!</h4>
        <form asp-action="Register">
            <div class="form-group">
                <input class="form-control" type="email" name="emailPrincipal" placeholder="Email" style="margin: 20px 0" required />
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="emailSecundario" placeholder="Email alternativo (Opcional)" style="margin: 20px 0" />
            </div>
            <div class="form-group row" style="margin: 20px 0">
                <div class="col-md-6">
                    <input class="form-control" type="text" name="nombres" placeholder="Nombres" required />
                </div>
                <div class="col-md-6">
                    <input class="form-control" type="text" name="apellidos" placeholder="Apellidos" required />
                </div>
            </div>
            <div class="form-group row" style="margin: 20px 0">
                <div class="col-md-6">
                    <input class="form-control" type="tel" name="telefono1" placeholder="Teléfono 1" required />
                </div>
                <div class="col-md-6">
                    <input class="form-control" type="tel" name="telefono2" placeholder="Teléfono 2 (Opcional)" />
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Contraseña" style="margin: 20px 0" required />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="passwordConfirmacion" placeholder="Reingresar contraseña" style="margin: 20px 0" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn btn-primary" style="margin: 20px 0" />
            </div>
        </form>
    </div>
</div>

