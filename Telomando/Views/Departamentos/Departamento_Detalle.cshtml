@model Telomando.Models.ViewModels.DepartamentosVM
@{
    ViewData["Title"] = "Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.oDepartamento.Iddepartamento == 0)
{
    <h1>Crear Departamento</h1>
}
else
{
    <h1>Editar Departamento</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Departamento_Detalle" asp-controller="Departamentos" method="post">
            <input type="hidden" asp-for="oDepartamento.Iddepartamento" />

            <div class="mb-3">
                <label class="form-label" asp-for="oDepartamento.Idpaises">Pais</label>
                <select class="form-select form-select-sm" asp-for="oDepartamento.Idpaises" asp-items="@Model.oListaPaise">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oDepartamento.Nombre">Departamento</label>
                <input class="form-control form-control-sm" asp-for="oDepartamento.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oDepartamento.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oDepartamento.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oDepartamento.Activo">Activo</label>
                <input class="form-check-input" asp-for="oDepartamento.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oDepartamento.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oDepartamento.Eliminado" type="checkbox" />
            </div>

              
            

           
            <div class="mb-2">

                @if (Model.oDepartamento.Iddepartamento == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaDepartamentos" asp-controller="Departamentos">Volver</a>

            </div>

        </form>
    </div>
</div>

