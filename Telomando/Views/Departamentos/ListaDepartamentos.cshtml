@model List<Telomando.Models.Departamento>
@{
    ViewData["Title"] = "Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Departamentos</h1>

</div>

<div class="card">
    <div class="card-header">
        <h5>Departamentos</h5>
    </div>
    <div class="card-body">
        <a class="btn-success btn-sm" asp-action="Departamento_Detalle" asp-controller="Departamentos" asp-route-idDepartamento="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pais</th>
                    <th>Departamento</th>
                    <th>Fecha Creacion</th>
                    <th>Activo</th>
                    <th>Eliminado</th>
                   <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.oPaises.Nombre</td>
                        <td>@item.Nombre</td>
                        <td>@item.FechaRegistro</td>
                        <td>@item.Activo</td>
                        <td>@item.Eliminado</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Departamento_Detalle" asp-controller="Departamentos" asp-route-idDepartamento="@item.Iddepartamento">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Departamentos" asp-route-idDepartamento="@item.Iddepartamento">Eliminar</a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>
