@model Telomando.Models.Paise
@{
    ViewData["Title"] = "Pais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Idpaises == 0)
{
    <h1>Crear Tipo Pais</h1>
}
else
{
    <h1>Editar Pais</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Paises_Detalle" asp-controller="Paises" method="post">
            <input type="hidden" asp-for="Idpaises" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Pais</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="FechaRegistro">Fecha Creacion</label>
                <input class="form-control form-control-sm" asp-for="FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Activo">Activo</label>
                <input class="form-control form-control-sm" asp-for="Activo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Eliminado">Eliminado</label>
                <input class="form-control form-control-sm" asp-for="Eliminado" type="text" />
            </div>


            <div class="mb-2">

                @if (Model.Idpaises == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaPaises" asp-controller="Paises">Volver</a>

            </div>

        </form>
    </div>
</div>

