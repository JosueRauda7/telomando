@model Telomando.Models.Sucursale
@{
    ViewData["Title"] = "Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Idsucursal == 0)
{
    <h1>Crear Sucursal</h1>
}
else
{
    <h1>Editar Sucursal</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Sucursal_Detalle" asp-controller="Sucursales" method="post">
            <input type="hidden" asp-for="Idsucursal" />

            @if (ViewData.ModelState["Nombre"] != null && ViewData.ModelState["Nombre"].Errors.Count > 0)
            {
                <div class="text-danger">
                    @ViewData.ModelState["Nombre"].Errors[0].ErrorMessage
                </div>
            }
            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Sucursal</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Telefono">Telefono Fijo</label>
                <input class="form-control form-control-sm" asp-for="Telefono" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Celular">Telefono Movil</label>
                <input class="form-control form-control-sm" asp-for="Celular" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Email">Correo</label>
                <input class="form-control form-control-sm" asp-for="Email" type="text" />
            </div>

            @if (ViewData.ModelState["FechaRegistro"] != null && ViewData.ModelState["FechaRegistro"].Errors.Count > 0)
            {
                <div class="text-danger">
                    @ViewData.ModelState["FechaRegistro"].Errors[0].ErrorMessage
                </div>
            }
            <div class="mb-2">
                <label class="form-label" asp-for="FechaRegistro">Fecha Creacion</label>
                <input class="form-control form-control-sm" asp-for="FechaRegistro" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="Activo">Activo</label>
                <input class="form-check-input" asp-for="Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="Eliminado" type="checkbox" />
            </div>



            <div class="mb-2">

                @if (Model.Idsucursal == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaSucursales" asp-controller="Sucursales">Volver</a>

            </div>

        </form>
    </div>
</div>

