@model Telomando.Models.ViewModels.MunicipiosVM
@{
    ViewData["Title"] = "Municipio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oMunicipio.Idmunicipio == 0)
{
    <h1>Crear Municipio</h1>
}
else
{
    <h1>Editar Municipio</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Municipio_Detalle" asp-controller="Municipios" method="post">
            <input type="hidden" asp-for="oMunicipio.Idmunicipio" />

            <div class="mb-3">
                <label class="form-label" asp-for="oMunicipio.Iddepartamento">Departamento</label>
                <select class="form-select form-select-sm" asp-for="oMunicipio.Iddepartamento" asp-items="@Model.oListaDepartamento">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMunicipio.Nombre">Municipio</label>
                <input class="form-control form-control-sm" asp-for="oMunicipio.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMunicipio.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oMunicipio.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMunicipio.Activo">Activo</label>
                <input class="form-control form-control-sm" asp-for="oMunicipio.Activo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMunicipio.Eliminado">Eliminado</label>
                <input class="form-control form-control-sm" asp-for="oMunicipio.Eliminado" type="text" />
            </div>




            <div class="mb-2">

                @if (Model.oMunicipio.Idmunicipio == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaMunicipios" asp-controller="Municipios">Volver</a>

            </div>

        </form>
    </div>
</div>
