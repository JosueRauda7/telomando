@model Telomando.Models.ViewModels.BodegaVM
@{
    ViewData["Title"] = "Bodega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oBodega.Idbodega == 0)
{
    <h1>Crear Bodega</h1>
}
else
{
    <h1>Editar Bodega</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Bodega_Detalle" asp-controller="Bodegas" method="post">
            <input type="hidden" asp-for="oBodega.Idbodega" />

            <div class="mb-3">
                <label class="form-label" asp-for="oBodega.Idtipobodega">Tipo Bodega</label>
                <select class="form-select form-select-sm" asp-for="oBodega.Idtipobodega" asp-items="@Model.oListaTipoBodega">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oBodega.Idsucursal">Sucursal</label>
                <select class="form-select form-select-sm" asp-for="oBodega.Idsucursal" asp-items="@Model.oListaSucursal">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>



            <div class="mb-2">
                <label class="form-label" asp-for="oBodega.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oBodega.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oBodega.Activo">Activo</label>
                <input class="form-check-input" asp-for="oBodega.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oBodega.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oBodega.Eliminado" type="checkbox" />
            </div>

            <div class="mb-2">

                @if (Model.oBodega.Idbodega == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaBodegas" asp-controller="Bodegas">Volver</a>

            </div>

        </form>
    </div>
</div>

