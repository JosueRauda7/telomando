@model Telomando.Models.ViewModels.BodegasProductosVM
@{
    ViewData["Title"] = "Producto en Bodega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oBodegaProducto.Idbodegaproducto == 0)
{
    <h1>Crear Producto en Bodega</h1>
}
else
{
    <h1>Editar Producto en Bodega</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="BodegaProducto_Detalle" asp-controller="BodegasProductos" method="post">
            <input type="hidden" asp-for="oBodegaProducto.Idbodegaproducto" />

            <div class="mb-3">
                <label class="form-label" asp-for="oBodegaProducto.Idbodega">Bodega</label>
                <select class="form-select form-select-sm" asp-for="oBodegaProducto.Idbodega" asp-items="@Model.oListaBodegas">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oBodegaProducto.Idproducto">Producto</label>
                <select class="form-select form-select-sm" asp-for="oBodegaProducto.Idproducto" asp-items="@Model.oListaProductos">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oBodegaProducto.Stock">Existencia</label>
                <input class="form-control form-control-sm" asp-for="oBodegaProducto.Stock" type="text" />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="oBodegaProducto.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oBodegaProducto.FechaRegistro" disabled type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oBodegaProducto.Activo">Activo</label>
                <input class="form-check-input" asp-for="oBodegaProducto.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oBodegaProducto.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oBodegaProducto.Eliminado" type="checkbox" />
            </div>

            <div class="mb-2">

                @if (Model.oBodegaProducto.Idbodegaproducto == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaBodegasProductos" asp-controller="BodegasProductos">Volver</a>

            </div>

        </form>
    </div>
</div>

