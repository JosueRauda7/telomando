@model Telomando.Models.ViewModels.ClienteVM
@{
    ViewData["Title"] = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oCliente.Idcliente == 0)
{
    <h1>Crear Cliente</h1>
}
else
{
    <h1>Editar Cliente</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Cliente_Detalle" asp-controller="Clientes" method="post">
            <input type="hidden" asp-for="oCliente.Idcliente" />

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.Idusuario">Usuario</label>
                <select class="form-select form-select-sm" asp-for="oCliente.Idusuario" asp-items="@Model.oListaUsuario">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oCliente.Idtipocliente">Tipo de Cliente</label>
                <select class="form-select form-select-sm" asp-for="oCliente.Idtipocliente" asp-items="@Model.oListaTipoCliente">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>



            <div class="mb-2">
                <label class="form-label" asp-for="oCliente.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oCliente.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oCliente.Activo">Activo</label>
                <input class="form-check-input" asp-for="oCliente.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oCliente.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oCliente.Eliminado" type="checkbox" />
            </div>
              
            <div class="mb-2">

                @if (Model.oCliente.Idcliente == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaClientes" asp-controller="Clientes">Volver</a>

            </div>

        </form>
    </div>
</div>
