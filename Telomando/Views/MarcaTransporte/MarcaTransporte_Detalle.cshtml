@model Telomando.Models.ViewModels.MarcaTransporteVM
@{
    ViewData["Title"] = "MarcaTransporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oMarcaTransporte.Idmarcatransporte == 0)
{
    <h1>Crear Marca de transporte</h1>
}
else
{
    <h1>Editar Marca de transporte</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="MarcaTransporte_Detalle" asp-controller="MarcaTransporte" method="post">
            <input type="hidden" asp-for="oMarcaTransporte.Idmarcatransporte" />

            <div class="mb-3">
                <label class="form-label" asp-for="oMarcaTransporte.Idmodelotransporte">Modelo de transporte</label>
                <select class="form-select form-select-sm" asp-for="oMarcaTransporte.Idmodelotransporte" asp-items="@Model.oListaModeloTransporte">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMarcaTransporte.Nombre">Marca de transporte</label>
                <input class="form-control form-control-sm" asp-for="oMarcaTransporte.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oMarcaTransporte.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oMarcaTransporte.FechaRegistro"  type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oMarcaTransporte.Activo">Activo</label>
                <input class="form-check-input" asp-for="oMarcaTransporte.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oMarcaTransporte.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oMarcaTransporte.Eliminado" type="checkbox" />
            </div>

            <div class="mb-2">

                @if (Model.oMarcaTransporte.Idmarcatransporte == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaMarcaTransporte" asp-controller="MarcaTransporte">Volver</a>

            </div>

        </form>
    </div>
</div>
