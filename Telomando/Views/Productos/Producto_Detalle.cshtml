@model Telomando.Models.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProducto.Idproducto == 0)
{
    <h1>Crear Producto</h1>
}
else
{
    <h1>Editar Producto</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Producto_Detalle" asp-controller="Productos" method="post">
            <input type="hidden" asp-for="oProducto.Idproducto" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nombre">Nombre Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Nombre" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oProducto.Idmarca">Marca</label>
                <select class="form-select form-select-sm" asp-for="oProducto.Idmarca" asp-items="@Model.oListaMarca">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Precio" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Descripcion">Descripcion Producto</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Descripcion" type="text" />
            </div>

           

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oProducto.FechaRegistro" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oProducto.Activo">Activo</label>
                <input class="form-check-input" asp-for="oProducto.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oProducto.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oProducto.Eliminado" type="checkbox" />
            </div>





            <div class="mb-2">

                @if (Model.oProducto.Idproducto == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaProductos" asp-controller="Productos">Volver</a>

            </div>

        </form>
    </div>
</div>

