@model Telomando.Models.ViewModels.CiudadesVM
@{
    ViewData["Title"] = "Ciudad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCiudad.Idciudad == 0)
{
    <h1>Crear Ciudad</h1>
}
else
{
    <h1>Editar Ciudad</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Ciudad_Detalle" asp-controller="Ciudades" method="post">
            <input type="hidden" asp-for="oCiudad.Idciudad" />

            <div class="mb-3">
                <label class="form-label" asp-for="oCiudad.Idmunicipio">Municipio</label>
                <select class="form-select form-select-sm" asp-for="oCiudad.Idmunicipio" asp-items="@Model.oListaMunicipios">
                    <option selected disabled>--Seleccionar--</option>

                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCiudad.Nombre">Ciudad</label>
                <input class="form-control form-control-sm" asp-for="oCiudad.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCiudad.FechaRegistro">Fecha de Creacion</label>
                <input class="form-control form-control-sm" asp-for="oCiudad.FechaRegistro" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oCiudad.Activo">Activo</label>
                <input class="form-check-input" asp-for="oCiudad.Activo" type="checkbox" />
            </div>

            <div class="mb-2">
                <label class="form-check-label" asp-for="oCiudad.Eliminado">Eliminado</label>
                <input class="form-check-input" asp-for="oCiudad.Eliminado" type="checkbox" />
            </div>

            


            <div class="mb-2">

                @if (Model.oCiudad.Idciudad == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="ListaCiudades" asp-controller="Ciudades">Volver</a>

            </div>

        </form>
    </div>
</div>
